% Define footline content
\setbeamertemplate{footline}{%
  \begin{beamercolorbox}[wd=\textwidth,ht=2.6ex,dp=1.3ex,rightskip=1cm,leftskip=1cm]{footline}
  \insertframenumber/\inserttotalframenumber
